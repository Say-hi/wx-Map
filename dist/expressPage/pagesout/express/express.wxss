page {
  background-color: #fff;
}
.express-img-wrap {
  height: 200rpx;
  background-image: linear-gradient(#7FC06E, #fff);
}
.express-img {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}
.express-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}
.express-input-wrap .express-input {
  width: 60%;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0 40rpx;
  border: 4rpx solid #999;
  border-radius: 30rpx;
}
.express-input-wrap::before {
  transform: translatex(40rpx);
  color: #999;
}
.icon-saoma {
  height: 80rpx;
  transform: translate(10rpx, 12rpx);
  position: relative;
  z-index: 999;
}
.icon-saoma::before {
  font-size: 50rpx;
  color: #999;
}
.del {
  animation: dl 1s forwards;
}
@keyframes dl {
  0% {
    transform: translate(0, 0);
  }
  10% {
    transform: translate(-100rpx, 0);
  }
  100% {
    transform: translate(1000rpx, -50rpx);
    padding: 0;
    margin: 0;
    height: 0rpx;
    width: 0rpx;
  }
}
.history {
  padding: 20rpx;
  box-sizing: border-box;
  height: 150rpx;
  margin: 0rpx 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  align-items: center;
  border: 1rpx solid #7FC06E;
  border-radius: 20rpx;
  box-shadow: 4rpx -2rpx 4rpx #ccc;
}
.history .info-wrap {
  display: flex;
  width: 180rpx;
  flex-direction: column;
  text-align: left;
  margin-right: 5rpx;
}
.history .info-wrap .company {
  font-size: 30rpx;
}
.history .info-wrap .number {
  font-size: 24rpx;
}
.history .last-info-wrap {
  font-size: 24rpx;
}
.history .phone {
  font-size: 40rpx;
}
.history .delete {
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 5rpx;
  background: linear-gradient(160deg, #fff, #7FC06E);
}
