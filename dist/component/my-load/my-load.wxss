.loading {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10000;
  width: 100%;
  height: 100%;
}
.loading .loading-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400rpx;
  height: 400rpx;
}
.loading image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
